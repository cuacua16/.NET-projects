@using SaxosAsp.Models.ViewModels

@model SaxoViewModel

<h1>Crear Saxo</h1>

<hr />

<div class="row">
	<div class="col-md-4">
		<!-- POST -->
		<form asp-action="Create">
			<!-- div para mostrar info al haber errores en el form: -->
			<div asp-validation-summary="ModelOnly" class="text-danger">

			</div>
			<div class="form-group">
				<label asp-for="Tipo" class="control-label"></label>
				<input asp-for="Tipo" class="form-control" />
				<!--span para mostrar error de validacion-->
				<span asp-validation-for="Tipo" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="MarcaId" class="control-label"></label>
				<select asp-for="MarcaId" class="form-control" asp-items="ViewBag.Marcas"> <!--esto sería de ViewData["Marcas"]-->

				</select>
				<span asp-validation-for="MarcaId" class="text-danger"></span>
			</div>

			<div class="form-group" >
			<input class="mt-3 btn btn-success" type="submit" value="Crear" />
			</div>
		</form>
	</div>
</div>


<!--Para que funcionen las validaciones necesitamos un section: -->
<!--Para agregar script de javascript al final del html (definido en _Layout) -->
@section Scripts {
	@{
		//Codigo JS q se va a cargar con C#
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
		//archivo html con scripts de jquery para validaciones para sus vistas
	}
}